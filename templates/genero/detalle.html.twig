{% extends 'base.html.twig' %}

{% block title %}SGT - Nuevo Genero{% endblock %}

{% block body %}
    <h1>Genero - Ver</h1>
    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">ID</label>
        <input type="text" class="form-control" id="formGroupExampleInput" value={{genero.id}} disabled>
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" value={{genero.nombre}} disabled>
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Creado</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" value="{{genero.createdAt|date("d/m/Y", "America/Argentina/Buenos_Aires")}} {{genero.createdAt|date("H:i:s", "America/Argentina/Buenos_Aires")}}" disabled>
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Editado</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" value="{{genero.updatedAt|date("d/m/Y", "America/Argentina/Buenos_Aires")}}  {{genero.updatedAt|date("H:i:s", "America/Argentina/Buenos_Aires")}}" disabled>
    </div>
    <a href="{{ path('app_genero_editar', {'id': genero.id}) }}" class="btn btn-warning">Editar</a>
    <a href="{{ path('app_genero_eliminar', {'id': genero.id}) }}" class="btn btn-danger">Eliminar</a>
    <a href="{{ path('app_genero') }}" class="btn btn-secondary">Regresar</a>
  {% endblock %}